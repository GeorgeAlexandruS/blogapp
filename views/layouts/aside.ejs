<div class="col-md-4 sidebar">
  <aside class="widget categories-widget">
    <h3 class="widget-title">Categories</h3>
    <ul>
      <li><a href="#">CAD Design</a></li>
      <li><a href="#">Computional Design</a></li>
      <li><a href="#">Generative Design</a></li>
      <li><a href="#">Scripting for Design</a></li>
    </ul>
  </aside>

  <aside class="widget recent-posts-widget">
    <h3 class="widget-title">Recent Posts</h3>
    <ul>
      <% for (var i = 0; i < blogposts.length; i++) { %>
      <li><a href="/post/<%= blogposts[i]._id %>"><%= blogposts[i].title %></a></li>
      <% } %>
    </ul>
  </aside>

  <aside class="widget popular-articles-widget">
    <h3 class="widget-title">Popular Posts</h3>
    <ul>
      <% for (var i = 0; i < blogposts.length; i++) { %>
      <li><a href="/post/<%= blogposts[i]._id %>"><%= blogposts[i].title %></a></li>
      <% } %>
    </ul>
  </aside>

  <% if(!loggedIn) { %>
  <aside class="widget login-form-widget">
    <form action="#" method="post">
      <div class="field input-field">
        <label for="username">Username</label>
        <input type="text" id="username" name="username" />
      </div><!-- .field -->

      <div class="field input-field">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" />
      </div><!-- .field -->

      <div class="field checkbox-field">
        <input type="checkbox" id="remember" name="remember" />
        <label for="remember">Remember Me</label>
      </div><!-- .field -->

      <div class="field submit-field">
        <input type="submit" value="Login" class="button primary-button">
        <span>or</span>
        <a href="#">Register</a>
      </div><!-- .field -->
    </form>
  </aside>
  <% } %>
</div>
